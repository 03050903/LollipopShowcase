<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat">
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>

        <!-- Here we setting appcompat’s actionBarStyle -->
        <item name="windowActionBar">false</item>

        <!-- ...and here we setting appcompat’s color theming attrs -->
        <item name="colorPrimary">@color/theme_default_primary</item>
        <item name="colorPrimaryDark">@color/theme_default_primary_dark</item>
        <item name="colorAccent">@color/accent</item>

        <item name="android:windowBackground">@color/theme_window_background</item>
        <item name="android:windowContentTransitions">true</item>

        <!--
        are set by the appCompat theme
        <item name="android:colorPrimary">@color/theme_default_primary</item>
        <item name="android:colorPrimaryDark">@color/theme_default_primary_dark</item>
        <item name="android:colorAccent">@color/accent</item>
        -->

        <!--
        inherits from colorPrimaryDark
        <item name="android:statusBarColor">@color/theme_default_primary</item>
        <item name="android:navigationBarColor">@color/theme_default_primary_dark</item>
        -->
    </style>

    <style name="AppThemeAboutLibraries" parent="android:Theme.Material">
        <item name="android:colorPrimary">@color/theme_default_primary</item>
        <item name="android:colorPrimaryDark">@color/theme_default_primary_dark</item>
        <item name="android:colorAccent">@color/accent</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">false</item>
        <item name="color">@android:color/white</item>
    </style>
</resources>
